<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0d0d0d">

        <SurfaceView
            android:id="@+id/rtmp_rtsp_stream_surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- command buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/ic_resolutions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="end"
                    android:background="#000000ff"
                    android:contentDescription="Change Resolution"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:src="@drawable/ic_tune_grey600_36dp" />

                <ImageButton
                    android:id="@+id/ic_switch_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_resolutions"
                    android:background="#000000ff"
                    android:contentDescription="Switch Camera"
                    android:cropToPadding="false"
                    android:padding="10dp"
                    android:src="@drawable/ic_switch_video_white_36dp" />

                <ImageButton
                    android:id="@+id/ic_preview_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ic_switch_camera"
                    android:background="#000000ff"
                    android:contentDescription="Orientation"
                    android:padding="10dp"
                    android:src="@drawable/ic_autorenew_white_36dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/ic_torch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_toRightOf="@+id/ic_preview_orientation"
                    android:background="#000000ff"
                    android:contentDescription="Torch"
                    android:padding="10dp"
                    android:src="@drawable/ic_flash_on_white_36dp" />

                <ImageButton
                    android:id="@+id/ic_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="start"
                    android:background="#000000ff"
                    android:contentDescription="Torch"
                    android:padding="10dp"
                    android:src="@drawable/ic_window_close_grey600_36dp" />
            </RelativeLayout>

            <!-- comment list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/commentList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <!-- comment form -->
            <LinearLayout
                android:id="@+id/commentForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40536077"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="38dp"
                android:paddingTop="0dp"
                android:paddingRight="38dp"
                android:paddingBottom="6dp">

                <ImageButton
                    android:id="@+id/ic_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:cropToPadding="false"
                    android:padding="4dp"
                    android:src="@drawable/ic_fiber_manual_record_white_36dp" />

                <EditText
                    android:id="@+id/txtComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:hint="Write a comment..."
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/btnComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:cropToPadding="false"
                    android:padding="4dp"
                    android:src="@drawable/ic_mode_comment_white_36dp"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/ic_broadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000ff"
                    android:cropToPadding="false"
                    android:padding="4dp"
                    android:src="@drawable/ic_videocam_white_36dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
